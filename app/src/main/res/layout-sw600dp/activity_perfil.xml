<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_pantalla_00"
    android:layout_height="match_parent"
    tools:context=".Perfil">


    <TextView
        android:id="@+id/configuraciones"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:outlineAmbientShadowColor="@color/Blanco"
        android:text="Configuraciónes"
        android:textColor="@color/Negro_Letras"
        android:textSize="25dp"
        android:textStyle="bold">

    </TextView>


    <Button
        android:id="@+id/btn_Nombre_Usuario"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/configuraciones"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bordeados_03"
        android:drawableLeft="@drawable/ic_perfil_01"
        android:text="Nombre"
        android:textColor="@color/Negro_Letras"
        android:textSize="10dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn_Cambiar_Contrasena"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Nombre_Usuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bordeados_03"
        android:drawableLeft="@drawable/ic_cambio_contrasena"
        android:outlineAmbientShadowColor="@color/Blanco"
        android:outlineSpotShadowColor="@color/Blanco"
        android:text="Cambiar Contraseña"
        android:textColor="@color/Negro_Letras"
        android:textSize="10dp"
        android:textStyle="bold"
        android:tint="#2B2B2B">

    </Button>

    <Button
        android:id="@+id/btn_Activar_Notificaciones"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Cambiar_Contrasena"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bordeados_03"
        android:drawableLeft="@drawable/ic_activar_notificaciones"
        android:outlineAmbientShadowColor="@color/Blanco"
        android:outlineSpotShadowColor="@color/Blanco"
        android:text="Activar Notificaciones"
        android:textColor="@color/Negro_Letras"
        android:textSize="10dp"
        android:textStyle="bold">

    </Button>

    <Button
        android:id="@+id/btn_Cerrar_Session"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Activar_Notificaciones"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bordeados_03"
        android:drawableLeft="@drawable/ic_cerrar_session"
        android:outlineAmbientShadowColor="@color/Blanco"
        android:outlineSpotShadowColor="@color/Blanco"
        android:text="Cerrar Sesión"
        android:textColor="@color/Negro_Letras"
        android:textSize="10dp"
        android:textStyle="bold">

    </Button>


</RelativeLayout>