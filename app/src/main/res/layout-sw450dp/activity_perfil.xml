<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Perfil">


    <ImageView
        android:id="@+id/configuraciones"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/mis_configuraciones"/>


    <Button
        android:id="@+id/btn_Nombre_Usuario"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/configuraciones"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bordeados_03"
        android:drawableLeft="@drawable/ic_perfil_01"
        android:text="Nombre"
        android:textColor="@color/Negro_Letras"
        android:textSize="10dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn_Cambiar_Contrasena"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Nombre_Usuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bordeados_03"
        android:drawableLeft="@drawable/ic_cambio_contrasena"
        android:outlineAmbientShadowColor="@color/Blanco"
        android:outlineSpotShadowColor="@color/Blanco"
        android:text="Cambiar Contraseña"
        android:textColor="@color/Negro_Letras"
        android:textSize="10dp"
        android:textStyle="bold"
        android:tint="#2B2B2B">

    </Button>

    <Button
        android:id="@+id/btn_Cerrar_Session"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Cambiar_Contrasena"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bordeados_03"
        android:drawableLeft="@drawable/ic_cerrar_session"
        android:outlineAmbientShadowColor="@color/Blanco"
        android:outlineSpotShadowColor="@color/Blanco"
        android:text="Cerrar Sesión"
        android:textColor="@color/Negro_Letras"
        android:textSize="10dp"
        android:textStyle="bold">

    </Button>

    <Button
        android:id="@+id/btn_AcercaDe"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Cerrar_Session"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bordeados_03"
        android:drawableLeft="@drawable/ic_creditos"
        android:outlineAmbientShadowColor="@color/Blanco"
        android:outlineSpotShadowColor="@color/Blanco"
        android:text="acerca de"
        android:textColor="@color/Negro_Letras"
        android:textSize="10dp"
        android:textStyle="bold">

    </Button>




</RelativeLayout>

